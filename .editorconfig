root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size  = 2

[*.{h,hh,hpp}]
indent_style = tab
indent_size  = 4
tab_width    = 4

[*.{c,cc,cpp}]
indent_style = tab
indent_size  = 4
tab_width    = 4

[*.{s,S}]
indent_style = tab
indent_size  = 4
tab_width    = 4

[Makefile*]
indent_style = tab
indent_size  = 4
tab_width    = 4

[*.sh]
indent_style = space
indent_size  = 2
tab_width    = 4
