root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size  = 2

[*.{h,hh,hpp}]
indent_style = space
indent_size  = 4

[*.{c,cc,cpp}]
indent_style = space
indent_size  = 4

[*.{s,S}]
indent_style = tab
indent_size  = 8

[Makefile*]
indent_style = tab
indent_size  = 8
